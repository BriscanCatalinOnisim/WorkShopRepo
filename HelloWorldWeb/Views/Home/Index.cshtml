@model HelloWorldWeb.Models.TeamInfo

@{
    ViewData["Title"] = "Home Page";
}

@section scripts {
    <script type="text/javascript" src="~/js/Index.js"></script>
}

@section AdditionalStyles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<div class="text-center">
    <h1 class="display-4">Our Team</h1>
    <ul id="list">

        @for (var i = 0; i < Model.TeamMembers.Count; i++)
        {
            var member = Model.TeamMembers[i].name;

        <li class="member" id="memberField">
            <span class="memberName">@member</span>
            <button id="deleteField">
                <span class="delete fa fa-remove"></span>
            </button>
            <button id="editField">
                <span class="remove fa fa-pencil"></span>
            </button>
        </li>
            
        }
    </ul>
    <input type="text" id="nameField" title="e.g. Radu" />
    <button type="submit" id="createButton" title="Create">Create</button>

</div>
